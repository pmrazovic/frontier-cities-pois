<h3 style="margin-bottom: 30px;">List of POIs</h3>

<%= will_paginate @pois, :previous_label => 'Previous', :next_label => 'Next', :renderer => BootstrapPagination::Rails %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Categories</th>
      <th>Subcategories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pois.each do |poi| %>
      <tr>
        <td><%= poi.title %></td>
        <td><%= poi.subtitle %></td>
        <td>
          <% poi.categories.each do |cat| %>
            <span class="label label-primary"><%= cat.name %></span>
          <% end %>
        </td>
        <td>
          <% poi.subcategories.each do |subcat| %>
            <span class="label label-warning"><%= subcat.name %></span>
          <% end %>
        </td>
        <td><%= link_to 'More info', poi, :class => "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @pois, :previous_label => 'Previous', :next_label => 'Next', :renderer => BootstrapPagination::Rails %>
