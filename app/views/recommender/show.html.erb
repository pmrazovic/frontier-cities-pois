<h3 style="margin-bottom: 30px;">Recommender</h3>

<%= form_tag recommender_rank_path, {:class => 'form-horizontal'} do %>

  <div class="form-group">
    <label for="architectureSlider" class="col-sm-2 control-label">Architecture</label>
    <div class="col-sm-10">
      <input id="architectureSlider"
      			 name="architecture_pref"
             class="slider" 
      			 type="text" 
      			 style="width: 500px;" 
      			 data-slider-min="0" 
      			 data-slider-max="100" 
      			 data-slider-step="1" 
      			 data-slider-value="50"/>
    </div>
  </div>
  <div class="form-group">
    <label for="museumsSlider" class="col-sm-2 control-label">Museums</label>
    <div class="col-sm-10">
      <input id="museumsSlider"
      			 name="museums_pref"
             class="slider" 
      			 type="text" 
      			 style="width: 500px;" 
      			 data-slider-min="0" 
      			 data-slider-max="100" 
      			 data-slider-step="1" 
      			 data-slider-value="50"/>
    </div>
  </div>
  <div class="form-group">
    <label for="artSlider" class="col-sm-2 control-label">Art</label>
    <div class="col-sm-10">
      <input id="artSlider"
      			 name="art_pref"
      			 class="slider" 
      			 type="text" 
      			 style="width: 500px;" 
      			 data-slider-min="0" 
      			 data-slider-max="100" 
      			 data-slider-step="1" 
      			 data-slider-value="50"/>
    </div>
  </div>
  <div class="form-group">
    <label for="leisureSlider" class="col-sm-2 control-label">Leisure</label>
    <div class="col-sm-10">
      <input id="leisureSlider"
      			 name="leisure_pref"
      			 class="slider" 
      			 type="text" 
      			 style="width: 500px;" 
      			 data-slider-min="0" 
      			 data-slider-max="100" 
      			 data-slider-step="1" 
      			 data-slider-value="50"/>
    </div>
  </div>
  <div class="form-group">
    <label for="shoppingSlider" class="col-sm-2 control-label">Shopping</label>
    <div class="col-sm-10">
      <input id="shoppingSlider"
      			 name="shopping_pref"
      			 class="slider" 
      			 type="text" 
      			 style="width: 500px;" 
      			 data-slider-min="0" 
      			 data-slider-max="100" 
      			 data-slider-step="1" 
      			 data-slider-value="50"/>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Recommend</button>
    </div>
  </div>

<% end %>

<script type="text/javascript">
	$('.slider').slider({
		formatter: function(value) {
			return 'Current value: ' + value + '%';
		}
	});

</script>